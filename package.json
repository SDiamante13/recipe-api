{
  "name": "tech.pathtoprogramming.recipe-api",
  "version": "1.0.0",
  "description": "Pet project to explore Node.js, Express, Terraform, AWS Lambda, and other interesting tools. The Recipe API returns the best recipes from a varity of sources.",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node build/app.js",
